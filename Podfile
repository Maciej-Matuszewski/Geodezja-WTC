use_frameworks!

def common_pods
    pod 'RxSwift',        '~> 4.0'
    pod 'RxCocoa',        '~> 4.0'
    pod 'KVNProgress',    '~> 2.3.1'
    pod 'Firebase/Core'
    pod 'Firebase/Auth'
    pod 'Firebase/Database'
    pod 'CodableFirebase'
    pod 'SDWebImage'
end

target 'Geodezja WTC' do
    common_pods
end
